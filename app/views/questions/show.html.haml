- provide :page_title, "Question #{@question.id}"

.col-md-12.col-sm-12.col-xs-12
  .x_panel
    .x_content
    
      %h2 #{@question.text}
      %br/
      - @question.answers.each do |answer|
        %p{style:"color:#{answer.right ? 'green' : 'red'};"} #{answer.text}
      %br/
      = link_to('Edit', edit_question_path(@question.id), {class: 'btn btn-round btn-primary'})
      = link_to('View All', questions_path, {class: 'btn btn-round btn-default'})
      = link_to('View Unanswered', unanswered_questions_path, {class: 'btn btn-round btn-warning'})

